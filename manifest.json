{
  "manifest_version": 3,
  "name": "YouTube Playlist Duration Counter",
  "version": "1.0.1",
  "description": "Counts the total duration of a YouTube playlist",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "YT Playlist Duration Counter"
  },
  "icons": {
    "128": "icon.png"
  }
}
